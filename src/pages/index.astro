---
import MainLayout from "../layouts/MainLayout.astro";
import HeroImage from "../images/image.png";
import { Image } from "astro:assets";
---

<MainLayout namespace="home">
  <div class="min-h-screen flex justify-between">
    <div class="w-1/2 p-1 flex flex-col justify-between">
      <h1 class="fade-in text-9xl overflow-hidden pb-3">
        Redefining the way of taking photos
      </h1>
      <a href="about" class="text-2xl">See more</a>
    </div>
    <Image
      src={HeroImage}
      class="cover-image max-h-screen object-cover w-1/2"
      alt={"Shot of the moon"}
    />
  </div>
</MainLayout>

<style>
  .cover-image {
    clip-path: polygon(0 0, 100% 0, 100% 0%, 0 0%);
  }
</style>
